const mongoose=require('mongoose');

const schema=mongoose.Schema;

const userschema=new schema({
    email:{
        type:String,
        required:true,
        unique:true
    },

    password:{
        type:String,
    },
        otp:{
        type:String
    },

    expireotp:{
        type:Date
    },

    token:{
        type:String
    },
    firstname:{
        type:String
    },
    lastname:{
        type:String
    },
    jobtitle:{
        type:String
    },
    number:{
        type:Number
    },
    city:{
        type:String
    },
    state:{
        type:String
    },
    aboutme:{
        type:String
    },
    tagline:{
        type:String
    },
    imagelink:{
      type:String
    },
    languages:[{
        type:String
    }],
    skills:[{
        type:String
    }],
    education:[{
       type:Object,
       ref:"education"
    }
    ],
    experience:[{
        type:Object,
        ref:"experience"
    }
    ]
    

});

module.exports=mongoose.model("user",userschema);